{
  "name": "makecode-arcade-sprite-generator",
  "private": true,
  "version": "0.5.0",
  "type": "module",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && source ../.venv/bin/activate && PYTHONPATH=. python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "lint": "npm run lint:client",
    "lint:client": "cd client && npm run lint",
    "setup": "npm install && cd client && npm install && cd ../server && npm run setup",
    "setup:server": "cd server && npm run setup",
    "clean": "rm -rf node_modules client/node_modules server/node_modules client/dist server/venv"
  },
  "devDependencies": {
    "@types/prismjs": "^1.26.5",
    "concurrently": "^9.1.0",
    "sass-embedded": "^1.90.0"
  },
  "license": "MIT",
  "author": {
    "name": "Javier Tamayo",
    "email": "javierj.tamayo@gmail.com",
    "url": "https://github.com/hobbie71"
  },
  "repository": {
    "type": "github",
    "url": "git@github.com:hobbie71/MakeCode-Arcade-Sprite-Generator.git"
  },
  "dependencies": {
    "prismjs": "^1.30.0"
  }
}
